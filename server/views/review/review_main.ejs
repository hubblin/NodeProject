<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Review</title>

    <link rel='stylesheet' href='/stylesheets/default.css' />
    <link rel='stylesheet' href='/stylesheets/select/select_review.css' />
    <style>
        hr {
            border: 1px solid #DDD;
        }

        #review_body {
            width: 1000px;
            height: auto;

            margin: 0 auto;
            margin-top: 100px;
        }

        .review_header {
            font-size: 32px;
            border-bottom: 3px solid #AAA;
            padding-bottom: 40px;
        }

        #review_header_f {
            margin-right: 5px;
        }

        #review_header_s {
            color: #868e96;
        }


        #review_info {
            display: flex;
            flex-direction: row;
            height: auto;
            padding: 10px;
            margin: 20px;
        }

        #review_info .item:nth-child(1) {

            flex-basis: 50px;

            margin-right: 30px;

        }

        #review_info .item:nth-child(2) {

            flex-basis: 500px;
            margin-right: 150px;
        }

        #review_info .item:nth-child(3) {


            flex-basis: 160px;

        }

        .item {
            color: #000;
        }

        #item_list {
            display: flex;
            flex-direction: column;
        }

        #item_list span{
            margin-bottom: 10px;
        }

        .star_space {
            display: inline-block;
            width: 111px;
            height: 20px;
            background: url('../images/star_empty.png') no-repeat;
            background-size: 111px 20px;
        }

        .star_space div {
            height: 100%;
            color: transparent;
            background: url('../images/star_full.png') no-repeat;
            background-size: 111px 20px;
        }

        .review_product_img {
            width: 50px;
            height: 50px;
            display: block;
            color: transparent;
            
        }


        .review_user_img {
            width: 160px;
            height: 160px;
            display: block;
            color: transparent;
            

        }
    </style>
</head>

<body>
    <%- include("../head/nav",{name:name}) %>

    <div id="review_body">

        <div class="review_header">
            <span id="review_header_f">리뷰</span><span id="review_header_s">(<%= reviewList.length %>)</span>
        </div>


            <% for(var i = 0; i<reviewList.length; i++) {%>
            <div id="review_info">
                <div class="item">
                    <img class="review_product_img" id="product_img<%= i%>"
                    src="../images/products/<%= reviewList[i].product_img_path%>"></img>
                    <script>
                        var product_img = document.getElementById('product_img<%= i%>');
                        if('<%= reviewList[i].product_img_path%>' == 'none'){
                            product_img.src = "../images/main_page/브라이언.jpg";
                        }
                    </script>
                </div>

                <div class="item" id="item_list">
                    <span><%= reviewList[i].product_name%></span>
                    <span>별점
                        <div class="star_space">
                            <div id="score<%= i%>" style="width: 100%;"></div>
                        </div>
                        <script>
                            var score = document.getElementById('score<%= i%>');
                            score.style.width = '<%= reviewList[i].pro_score*20%>%'
                        </script>
                        <span><%=  reviewList[i].pro_review_date%></span>
                        <span><%=  reviewList[i].review_user_id%></span>
                    </span>
                    <span><%=  reviewList[i].pro_review_content%></span>
                </div>

                <div class="item">
                    <img class="review_user_img" id="review_img<%= i%>" 
                    src="../images/main_page/브라이언.jpg"></img>
                    <script>
                        var user_review_img = document.getElementById('review_img<%= i%>');
                        if('<%= reviewList[i].pro_img_path%>' == 'none'){
                            user_review_img.src = "../images/main_page/브라이언.jpg";
                        }
                    </script>
                </div>

            </div>

            <hr>

            <%}%>
        

        
