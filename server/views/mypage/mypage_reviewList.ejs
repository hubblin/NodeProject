        #my_main{
            text-align: center;
            line-height: 100px;
            font-size: 25px;
            border-right: 1px solid white;
        }
        #my_order_count{
            border-right: 1px solid white;
        }
        .count div{
            margin: 10px;
        }

        .count_content{
            margin: 0 auto;
        }
        #tbody{
