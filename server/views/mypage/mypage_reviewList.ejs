            font-size: 15px;
        }
        .mypage_content{
           margin: 20px;
        }
        .painting_order_content{
            margin: 50px;
            padding: 50px;
            height: auto;
            border: 1px solid rgb(216, 216, 216);
            border-radius: 50px;
            box-shadow: 2.5px 2.5px 0.2em  rgb(216, 216, 216);
            
        }
        .painting_order_product{
            margin-bottom: 50px;
            width: 1215px;
            padding: 30px;
            height: 200px;
            border: 1px solid rgb(216, 216, 216);
            border-radius: 25px;
            box-shadow: 2.5px 2.5px 0.2em  rgb(216, 216, 216);
            display: flex;
        }

        .painting_order_product #info span{
            margin-bottom: 10px;
            font-size: 20px;
        }

        .painting_order_btn{
            border: 1px solid rgb(216, 216, 216);
            background: none;
            width: 300px;
            height: 50px;
            margin-bottom: 30px;
        }
        .painting_order_btn:active{
            border: 0;
            background: rgb(255, 251, 0);
            
        }
        .painting_order_btn:focus{
            outline: none;
            border: 0;
            background: #ffe492;
            
        }

        #adr_add_btn{
            border: 1px solid rgb(216, 216, 216);
            background: none;
            color:#FFBF00;
            width: 100%;
            height: 50px;
            font-size: 20px;
            margin-left: auto;
            margin-right: auto;
            font-weight: bold;
            
        }

        #adr_add_btn:active{
            border: 0;
            outline: none;
            background: #ffe492;
        }
        #adr_add_btn:focus{
            border: 0;
            outline: none;
            background: #ffe492;
        }
        
    </style>

</head>

