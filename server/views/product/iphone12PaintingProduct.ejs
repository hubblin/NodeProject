<!DOCTYPE html>
<html>

<head>
    <title>CS</title>
    <link rel='stylesheet' href='/stylesheets/default.css' />
    <link rel='stylesheet' href='/stylesheets/select/select1.css' />
    <link rel='stylesheet' href='/stylesheets/sidenav.css' />
    <link rel='stylesheet' href='/stylesheets/product_card.css' />
    <style>
        .product_contents {
            margin-top: 100px;
            display: block;
            position: relative;
            margin-left: auto;
            margin-right: auto;
            width: 1164px;
        }

        .product_contents .product_nav {
            float: left;
            width: 200px;
        }

        .product_contents .product_main {
            float: right;

            width: 932px;
            height: 2200px;
            margin-left: 32px;
            margin-bottom: 20px;
        }
    </style>
</head>

<body>
    <%- include("../head/nav",{name:name}) %>
    <div class="product_contents">
        <div class="product_nav">
            <div class="menu">
                <div style="font-size: 25px; font-weight: bold;">케이스</div>
                <li class="menu-item">
                    <div class="btn">
                        아이폰
                        <button id="dropdown_btn" onclick="slidedown()"><img src="/images/font/down.png"/></button>
                    </div>
                    <div class="menu-item__sub" id="sub_drop">
                        <a href="/product/painting/iphone12case">아이폰12</a>
                        <a href="/product/painting/iphone11case">아이폰11</a>
                    </div>
                </li>
                <li class="menu-item">
                    <div class="btn">
                        갤럭시
                        <button id="dropdown_btn2" onclick="slidedown2()"><img src="/images/font/down.png"/></button>
                    </div>
                    <div class="menu-item__sub" id="sub_drop2">
                        <a href="/product/painting/galaxy20case">갤럭시S20</a>
                        <a href="/product/painting/galaxy10case">갤럭시S10</a>
                    </div>
                </li>
            </div>
        </div>
        <div class="product_main">
            <% for(var j=0; j<caseProduct.length; j++){%>
            <a href="/order">
                <div class="cards">
                    <div class="img-size">
                        <img src="../../images/products/<%= caseProduct[j].product_img_path %>">
                        <div class="pop_btn">
                            <div class="cards_btn">go to create</div>
                            <div class="bar"></div>
                            <div class="rot_bar"></div>
                        </div>
                    </div>

                    <div class="container">
                        <p class="title"><%= caseProduct[j].product_name %></p>
                        <p class="price"><%= caseProduct[j].product_price %></p>
                    </div>
                </div>
            </a>
            <% } %>
        </div>
    </div>
</body>

</html>

<script type="text/javascript">
    var dropdown =  document.getElementById("dropdown_btn");
    var dropdown2 = document.getElementById("dropdown_btn2");
    var drop = document.getElementById('sub_drop');
    var drop2 = document.getElementById('sub_drop2');
    function slidedown(){
        if(drop.classList[1]=='sub_drop'){
            drop.classList.remove('sub_drop');
            dropdown.classList.remove('rotate');
        }else{
            drop.classList.add('sub_drop');
            dropdown.classList.add('rotate');
        }
    }
    function slidedown2(){
        if(drop2.classList[1]=='sub_drop2'){
            drop2.classList.remove('sub_drop2');
            dropdown2.classList.remove('rotate2');
        }else{
            drop2.classList.add('sub_drop2');
            dropdown2.classList.add('rotate2');
        }
    }

</script>


