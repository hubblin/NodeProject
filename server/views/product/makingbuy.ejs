    <script type="text/javascript">



        function getSelectValue(frm)
        {
        
        frm.optionValue.value = frm.selectBox.options[frm.selectBox.selectedIndex].value;

        }

        function calculatePay() {

            var price1 = document.getElementById("buttonSelect").value;
            var price2 = document.getElementById("colorSelect").value;
            Number(price1);
            Number(price2);
            document.getElementById("total_price").value = (Number(price1) + Number(price2) + 300000);
            
            
        }




    </script>
