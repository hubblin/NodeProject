    <body>
        <%- include("../head/nav",{name:name}) %>
     
        <div class="title">
            <h1>주문/결제</h1>
            <div class="order_state"><span class="before">주문결제</span> <span class="middle_state">></span> <span class="done">주문완료</span></div>
            </div>

            <div class="making_image">
